<!-- _movie_card.html.erb -->
<% movie = Movie.find(params[:id]) %>
<div class="col-4 py-2">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= movie.name %></h5>
      <%= image_tag(FakePictureImage.Image.new(:man), alt: "Movie Image", class: "movie-image", style: "width: 2cm; height: 2cm;") %>     
      <%= link_to "Show this movie", movie, class: "btn btn-primary" %>
    </div>
  </div>
</div>
